{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "references": [
    {
      "path": "../../packages/remesh/tsconfig.json"
    },
    {
      "path": "../../packages/remesh-react/tsconfig.json"
    },
    {
      "path": "../../packages/remesh-redux-devtools/tsconfig.json"
    },
    {
      "path": "../../packages/remesh-logger/tsconfig.json"
    },
    {
      "path": "../domains/tsconfig.json"
    }
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
